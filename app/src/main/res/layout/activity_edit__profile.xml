<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Edit_Profile">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/profile_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:src="@drawable/army"/>



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_photo"
        style="@style/Widget.AppCompat.ActionButton.CloseMode"
        android:layout_below="@+id/profile_image"
        android:layout_centerHorizontal="true"
        android:text="แก้ไขรูปภาพ"/>

    <TextView
        android:id="@+id/namee"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:textColorHint="#000000"
        android:layout_below="@id/btn_photo"
        android:hint="ชื่อผู้ใช้ :" />


    <EditText
        android:layout_below="@id/btn_photo"
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="ชื่อผู้ใช้"
        android:textColor="@color/colorPrimary"
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/emaill"
        android:layout_below="@id/name"
        android:layout_width="350dp"
        android:textColorHint="#000000"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:hint="อีเมลล์ :" />

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/name"
        android:gravity="center"
        android:text="อีเมลล์"
        android:textColor="@color/colorPrimary"
        android:textSize="15dp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/user_firstnamee"
        android:layout_width="350dp"
        android:layout_below="@id/email"
        android:textColorHint="#000000"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:hint="ชื่อ :" />
    <EditText
        android:id="@+id/user_firstname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/email"

        android:gravity="center"
        android:text="ชื่อ"
        android:textColor="@color/colorPrimary"
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/user_lastnamee"
        android:layout_width="350dp"
        android:textColorHint="#000000"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/user_firstname"
        android:layout_marginTop="10dp"
        android:hint="นามสกุล :" />

    <EditText
        android:id="@+id/user_lastname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_firstname"
        android:gravity="center"
        android:text="นามสกุล"
        android:textColor="@color/colorPrimary"
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/user_agee"
        android:layout_width="350dp"
        android:textColorHint="#000000"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/user_lastname"
        android:layout_marginTop="10dp"
        android:hint="อายุ :" />
    <EditText
        android:id="@+id/user_age"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_below="@id/user_lastname"
        android:gravity="center"
        android:text="อายุ"
        android:textColor="@color/colorPrimary"
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/telephonee"
        android:layout_width="350dp"
        android:textColorHint="#000000"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/user_age"
        android:layout_marginTop="10dp"
        android:hint="เบอร์ติดต่อ :" />
    <EditText
        android:id="@+id/telephone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_below="@id/user_age"
        android:gravity="center"
        android:text="เบอร์ติดต่อ"
        android:textColor="@color/colorPrimary"
        android:textSize="15dp"
        android:textStyle="bold" />

    <RadioGroup
        android:layout_below="@id/telephone"
        android:layout_marginTop="20dp"
        android:id="@+id/sex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">


        <RadioButton
            android:id="@+id/rb_male"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ชาย" />

        <RadioButton
            android:id="@+id/rb_female"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="หญิง" />

    </RadioGroup>

    <EditText

        android:id="@+id/user_sex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="1000dp"
        android:gravity="center"
        android:text="password"
        android:textColor="@color/colorPrimary"
        android:textSize="15dp"
        android:textStyle="bold" />



</RelativeLayout>