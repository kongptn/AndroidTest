<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <RelativeLayout
        android:id="@+id/rt_top"
        android:background="@color/colorHead"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:text="คำขอเป็นเพื่อน"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rt_center"
        android:layout_below="@+id/rt_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgDialog"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_width="60dp"
            android:layout_height="60dp" />

        <TextView
            android:id="@+id/dialog_tv"
            android:layout_below="@+id/imgDialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="Request Join"
            android:textColor="#000000"
            android:textSize="15dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rt_low"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/rt_center"
        android:background="@color/colorBottom"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <Button
            android:id="@+id/bt_not_accept"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:background="#ca2f2f"
            android:layout_toRightOf="@+id/bt_accept"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:text="ลบคำขอ" />

        <Button
            android:id="@+id/bt_accept"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="10dp"
            android:background="#5fb74d"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:text="ยืนยัน" />


    </RelativeLayout>

</RelativeLayout>