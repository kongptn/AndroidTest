<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fg"
    tools:context=".Contact_Admin">

    <RelativeLayout
        android:id="@+id/rtlayout"
        android:layout_marginTop="90dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FFFFFF">

   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="ยื่นคำร้อง"
       android:textStyle="bold"
       android:layout_centerInParent="true"
       android:textColor="#000000"
       android:textSize="20dp" />

    </RelativeLayout>


    <Spinner
        android:id="@+id/spinner"
        android:layout_below="@+id/rtlayout"
        android:layout_marginTop="210dp"
        android:background="#54e7cf"
        android:layout_width="match_parent"
        android:layout_height="50dp"></Spinner>

    <EditText
       android:id="@+id/et_req"
        android:layout_below="@+id/spinner"
        android:layout_marginTop="20dp"
        android:layout_centerInParent="true"
        android:hint="กรอกคำร้องขอ"
        android:textColorHint="#000000"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="100dp" />

    <Button
        android:id="@+id/bt_req"
        android:layout_marginTop="20dp"
        android:layout_centerInParent="true"
        android:text="เพิ่มคำร้องขอ"
        android:background="#54e7cf"
        android:layout_below="@+id/et_req"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>