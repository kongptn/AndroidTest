<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    tools:context=".Friend">



    <Button
        android:id="@+id/searchfriends"
        android:layout_marginTop="125dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/search_f"
        android:layout_width="250dp"
        android:layout_height="150dp" />

    <View
        android:id="@+id/view1"
        android:layout_below="@+id/searchfriends"
        android:layout_width="wrap_content"
        android:layout_height="3dp"
        android:layout_marginTop="80dp"
        android:background="@android:color/holo_blue_light"></View>
    <Button
        android:id="@+id/friends"
        android:layout_below="@+id/view1"
        android:layout_marginTop="80dp"
        android:background="@drawable/ffg"
        android:layout_centerHorizontal="true"
        android:layout_width="250dp"
        android:layout_height="150dp"
        />

</RelativeLayout>